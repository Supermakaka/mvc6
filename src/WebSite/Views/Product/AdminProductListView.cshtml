@model WebSite.ViewModels.Product.AdminProductListViewModel

@{
    ViewBag.Title = "Products";
}

<div class="page-header page-header-with-actions">
    <h1 class="pull-left">Products</h1>
    <div class="actions pull-right">
        <button type="button" class="btn btn-primary" id="btn-user-create"><i class="oi oi-plus"></i> New user</button>
    </div>
</div>

<div data-table-with-filters>
    <div class="dt-filters">
        <div class="row">
            <div class="col-xs-12">
                <div class="form-group">
                    <label for="name-filter">Product Category</label>
                    <input class="form-control input-sm" type="text" placeholder="Text" data-filter />
                </div>
            </div>
        </div>
    </div>
    <table id="user-list" class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Company</th>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Role</th>
                <th>Enabled</th>
                <th>Create Date</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section Styles
{
    <link rel="stylesheet" webpack-dev-server-href-include="/build/projectList.css" />
}

@section Scripts
{
    <script webpack-dev-server-src-include="/build/projectList.js" asp-file-version="true"></script>

    <script type="text/javascript">

        $(document).ready(function () {

            userList.onReady($('#project-list'));

        });

    </script>
}