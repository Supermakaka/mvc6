<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - WebSite</title>

        <link rel="stylesheet" webpack-dev-server-href-include="/build/common.css" />

        @RenderSection("styles", required: false)

</head>
    <body>
        @RenderBody()
        
        <environment names="Development">
            <script src="http://localhost:9999/webpack-dev-server.js"></script>
        </environment>

        <script webpack-dev-server-src-include="/build/common.js"></script>
        
        <script>
            $(function () {
                site.onReady();
            });
        </script>

        @RenderSection("scripts", required: false)

        <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                </div>
            </div>
        </div>
        
        @RenderSection("footer", required: false)
    </body>
</html>
